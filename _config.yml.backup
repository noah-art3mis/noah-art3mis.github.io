# Site settings
title: 'Gustavo Costa'
email: 'gustavo.costa@lis.ac.uk'
# description: >-
#    Interdisciplinary researcher in natural language processing and AI ethics, with a background in psychotherapy and philosophy of science.
baseurl: ''
url: 'https://noah-art3mis.github.io'
github_username: 'noah-art3mis'
linkedin_username: 'gustavoarcos'
instagram_username: 'simulacro.psi'
# bluesky_username: 'simulacro.bsky.social'
# mastodon_username: 'noah_artemis@gamedev.place'

# Author information
author:
    name: 'Gustavo Costa'
    bio: 'Interdisciplinary researcher in NLP and AI ethics'
    location: 'London, UK'
    phone: '+44 7502 445416'
    website: 'noah-art3mis.github.io'

# Theme configuration - using remote_theme for latest version
remote_theme: jekyll/minima
minima:
    # skin: dark
    skin: classic
    date_format: '%b %-d, %Y'

# Build settings
markdown: kramdown
plugins:
    - jekyll-feed
    - jekyll-seo-tag
    - jekyll-remote-theme

# Collections
collections:
    projects:
        output: true
        permalink: /projects/:title/

# Defaults
defaults:
    - scope:
          path: ''
          type: 'posts'
      values:
          layout: 'post'
          author: 'Gustavo Costa'
    - scope:
          path: ''
          type: 'projects'
      values:
          layout: 'project'
